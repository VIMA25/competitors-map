        # Success rate filter
        success_options = ['All', 'High (70%+)', 'Medium (50-70%)', 'Low (<50%)', 'Not Reported']
        selected_success = st.selectbox("üéØ Success Rate", success_options)
    
    # Search functionality
    search_term = st.sidebar.text_input("üîç Search Clinic Name or City", placeholder="Enter search term...")
    
    # Advanced filters
    with st.sidebar.expander("‚öôÔ∏è Advanced Filters"):
        # Cycle volume filter
        if 'Total Cycles 2022' in df.columns:
            cycle_range = st.slider(
                "Total Cycles Range",
                min_value=0,
